<div class="page-blocks">
  {%- assign blockSize = section.blocks | size -%}
  {%- if blockSize > 0 and section.blocks[0].type == 'image-hero' -%}
  {%- assign block = section.blocks[0] -%}
  {% include 'page-block-image-hero' %}
  {%- endif -%}
  
  {%- if section.settings.page_title_enable -%}
  <header class="section-header ambassador__header">
  	<h1 class="section-header__title">{{ section.settings.title }}</h1>
  </header>
  {% else %}
  <div class="visually-hidden">
    {% include 'breadcrumbs' %}
  </div>  
  {%- endif -%}
{%- for block in section.blocks -%}
  
  {%- case block.type -%}    
  	{% when 'image-hero' %}
  		{% if forloop.index0 > 0 %}
      	{% include 'page-block-image-hero' %}
  		{%- endif -%}
  	

  	{% when 'background-image-text' %}
      {% include 'page-block-background-image-text' %}

  {%- endcase -%}
{%- endfor -%}
</div>

