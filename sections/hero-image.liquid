<!-- sections/hero-image.liquid -->
{% for block in section.blocks %}
    <!-- block.settings={{ block.settings | json }} -->
    <div class="hero-image hero-image--{{ block.id }}" id="hero-image-{{ block.id }}">
        {% style %}
            .hero-image--{{ block.id }} .hero-caption,
            .hero-image--{{ block.id }} .hero-caption a,{
                color: {{ block.settings.text_color }};
            }
            .hero-image--{{ block.id }} .hero-caption button {
                background-color: {{ block.settings.button_color }};
                color: {{ block.settings.button_text_color }};
            }
            .hero-image--{{ block.id }} .hero-caption h4 {
                font-size: {{ block.settings.title_size | times: 0.5 }}px;
            }
            @media only screen and (min-width: 769px) {
                .hero-image--{{ block.id }} .hero-caption h4 {
                    font-size: {{ block.settings.title_size }}px;
                }
            }
        {% endstyle %}
        {% render 'hero-image', block: block %}
    </div>
{% endfor %}


{% schema %}
    {
        "name": "Hero Image",
        "tag": "div",
        "class": "hero-image",
        "max_blocks": 5,
        "settings": [{
            "type": "text",
            "id": "title",
            "label": "Hero Image"
        }],
        "blocks": [
            {
                "name": "Image",
                "type": "image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image (Landscape)"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_portrait",
                        "label": "Image (Portrait)",
                        "info": "Used for max-width: 768px and lower"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Image link"
                    },
                    {
                        "type": "text",
                        "id": "top_subheading",
                        "label": "Subheading"
                    },
                    {
                        "type": "textarea",
                        "id": "title",
                        "label": "Heading",
                        "default": "Two line\nhero image."
                    },
                    {
                        "type": "range",
                        "id": "title_size",
                        "label": "Heading text size",
                        "default": 80,
                        "min": 40,
                        "max": 100,
                        "unit": "px"
                    },
                    {
                        "type": "text",
                        "id": "subheading",
                        "label": "Text",
                        "default": "And optional subtext"
                    },
                    {
                        "type": "color",
                        "id": "text_color",
                        "label": "Text Color",
                        "default": "#CE0E2D"
                    },
                    {
                        "type": "text",
                        "id": "button_text",
                        "label": "Button link text",
                        "default": "Optional button"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button link"
                    },
                    {
                        "type": "color",
                        "id": "button_color",
                        "label": "Button Color",
                        "default": "#CE0E2D"
                    },
                    {
                        "type": "color",
                        "id": "button_text_color",
                        "label": "Button Text",
                        "default": "#FFFFFF"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Hero Image",
                "settings": {
                    "title": "Hero Image"
                },
                "blocks": [
                    {
                        "type": "image"
                    }
                ]
            }
        ]
    }
{% endschema %}
