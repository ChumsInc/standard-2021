{% comment %}
variables required:
- animation_row (optional)
{% endcomment %}
{% if animation_row %}
    {%- assign animation_row = animation_row | plus: 1 -%}
{% endif %}
<ul class="mobile-nav__social {% if animation_row %}appear-animation appear-delay-{{ animation_row }}{% endif %}">
