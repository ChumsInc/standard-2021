{% if settings.cart_type == 'drawer' %}
  <div id="CartDrawer" class="offcanvas offcanvas-end" role="dialog" aria-label="Cart Contents" tabindex="-1">
    <div class="offcanvas-header">
      <h2 class="offcanvas-title">{{ 'cart.general.title' | t }}</h2>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <div id="CartContainer" class="drawer__cart"></div>
    </div>
    {% comment %}
    <div class="drawer__fixed-header">
      <div class="drawer__header appear-animation appear-delay-1">
        <div class="h2 drawer__title">{{ 'cart.general.title' | t }}</div>
        <div class="drawer__close">
          <button type="button" class="drawer__close-button js-drawer-close">
            {% render 'icon-close' %}
            <span class="visually-hidden">{{ 'cart.general.close_cart' | t }}</span>
          </button>
        </div>
      </div>
    </div>
    <div class="drawer__inner">
      <div id="CartContainer" class="drawer__cart"></div>
    </div>
    {% endcomment %}
  </div>
{% endif %}
