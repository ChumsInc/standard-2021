{% capture previous_label %}
  {% render 'icon-chevron-left' %}
  <span class="icon__fallback-text">{{ 'general.pagination.previous' | t }}</span>
{% endcapture %}
{% capture next_label %}
  {% render 'icon-chevron-right' %}
  <span class="icon__fallback-text">{{ 'general.pagination.next' | t }}</span>
{% endcapture %}
<div class="pagination">
  {{ paginate | default_pagination: previous: previous_label, next: next_label | replace: 'view=ajax', '' }}
</div>
