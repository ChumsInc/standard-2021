{% comment %}
Renders a customized title for various tag names
Required for render:
	tag_name
{% endcomment %}
{% case tag_name %}
	{% when 'regular end' %}
		Normal Frames <small>(5-10 mm)</small>
	{% when 'large end' %}
		Large Frames <small>(10-20mm)</small>
	{% when 'small end' %}
		Small Frames <small>(2-4 mm)</small>
	{% when 'mono' %}
		Mono Filament (fishing line)
	{% when 'floating accessories' %}
		Floating
	{% else %}
		{%- assign tag_words = tag_name | split: ' ' -%}
		{%- for tag_word in tag_words -%}
			{{ tag_word | capitalize }}
		{%- endfor -%}
{% endcase %}
